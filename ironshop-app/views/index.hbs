<div class="container mt-5">
    <h2 class="text-center">PRODUCTOS DESTACADOS</h2>
    <div class="row">
        {{#each products}}
        <div class="col-md-4 col-sm-3">
            <div class="card mt-5" style="width: 20rem;">
                <div class="card-bg">
                    <a href="#" class="text-center">
                        <img src="{{image}}" alt="image-product" class="img-fluid" />
                    </a>
                </div>
                <div class="card-body p-3">
                    <div class="d-flex justify-content-between align-items-center">
                        <div>
                            <p class="card-title text-secondary fw-bold">{{name}}</p>
                            <div class="rating" data-rating="3"></div>
                        </div>
                        <p class="card-title text-center text-secondary fs-4">{{price}}â‚¬</p>
                    </div>
                    <div class="mt-5 d-flex justify-content-center">
                        <a class="btn btn-outline-primary rounded-pill fw-bold w-100" href="/producto/{{id}}" role="button">Ver Detalles</a>
                    </div>
                </div>
            </div>
        </div>
        {{/each}}
    </div>
</div>
<script src="/js/rating.js"></script>