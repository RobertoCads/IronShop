<script>
    $("#input-id").rating({ min: 1, max: 5, step: 1, size: 'xs' });
</script>

<style>
    .rating-container .clear-rating.clear-rating-active {
        display: none;
    }

    .rating-container .caption {
        display: none !important;
    }
</style>