<div class="container">
    <div class="mt-5 row justify-content-center">
        <div class="col-md-6">
            <form action="/productos/crear" method="POST" enctype="multipart/form-data">
                <div class="mb-3">
                    <label for="titleInput" class="form-label">Name</label>
                    <input type="text" class="form-control" id="titleInput" name="title">
                </div>
                <div class="mb-3">
                    <label for="descripInput" class="form-label">Description</label>
                    <input type="text" class="form-control" id="descripInput" name="description">
                </div>
                <div class="mb-3">
                    <label for="priceInput" class="form-label">Price</label>
                    <input type="text" class="form-control" id="priceInput" name="price">
                </div>
                <div class="mb-3">
                    <label for="imageInput" class="form-label">Imagen</label>
                    <input type="file" class="form-control" id="imageInput" name="imageFile">
                </div>
                <div class="d-grid gap-2">
                    <button type="submit" class="btn btn-primary btn-block">Crear Producto</button>
                </div>
            </form>

        </div>
    </div>
</div>